# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.home()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
# Product routes
GET		/products/					controllers.Products.list()
GET		/products/new				controllers.Products.newProduct()
GET		/products/:ean				controllers.Products.details(ean:String)
GET		/products/:ean/edit			controllers.Products.update(ean:String)
POST	/products/					controllers.Products.save()
DELETE	/products/:ean				controllers.Products.delete(ean:String)
# Supplier routes
GET		/suppliers/					controllers.Suppliers.list()
GET		/suppliers/new				controllers.Suppliers.newSupplier()
GET		/suppliers/:name			controllers.Suppliers.details(name:String)
POST	/suppliers/					controllers.Suppliers.save()
DELETE	/suppliers/:name			controllers.Suppliers.delete(name:String)

# Supplier transaction:

GET /suppliers/:name/transactions/new controllers.Supplier_Transactions.newTransaction(name:String)

POST /suppliers/:name/transactions/				controllers.Supplier_Transactions.save(name:String)

# Customer routes
GET     /customers/             controllers.Customers.list()
GET     /customers/new          controllers.Customers.newCustomer()
GET     /customers/:id        controllers.Customers.details(id:Long)
POST    /customers/             controllers.Customers.save()
DELETE  /customers/:id        controllers.Customers.delete(id:Long)

# Customer transaction:
GET     /customers/:name/transactions/new   controllers.Customer_Transactions.newTransaction(name:String)
POST    /customers/:name/transactions/      controllers.Customer_Transactions.save(name:String)